extends layout

block content
    div.container
        .row
            .col-sm-4.p-1
                #spells.card
                    h5.card-header Spells
                    .list-group.list-group-flush
                        a.list-group-item(href="?") Test
                        a.list-group-item(href="?") Test2
                        a.list-group-item(href="?") Test3
            .col-sm-4.p-1
                #monster.card
                    img.card-img-top.monster-scene(v-bind:src="'/images/bad/' + name + '.png'" alt="Unknown")
                    img.card-img-top.background-scene(v-bind:src="'/images/backgrounds/' + background + '.png'" alt="Unknown")
                    .card-body
                        h5.card-title {{ display }}
                        p.card-text HP: {{ health }} / {{ max }}
                        .progress
                            .progress-bar.progress-bar-striped.progress-bar-animated(role="progressbar" v-bind:style='"width: " + (health/max)*100 + "%"')

            .col-sm-4.p-1
                #player.card
                    img.card-img-top(v-bind:src="'/images/player/' + type + '.png'"  alt='Unknown')
                    .card-body
                        h3.card-title {{ name }}
                            small  the {{ type }}
                        p.card-text Level: {{ level }}
                        p.card-text Clicks: {{ clicks }}
                        small.card-text ID: {{ id }}
                    ul.list-group.list-group-flush
                        li.list-group-item Player 2
                        li.list-group-item Player 3
        .row
            .col-sm-4.p-1
                .card
                    h5.card-header Spells
                    .list-group.list-group-flush
                        a.list-group-item(href="?") Test
                        a.list-group-item(href="?") Test2
                        a.list-group-item(href="?") Test3

        script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
        script(src="javascripts/client.js")
